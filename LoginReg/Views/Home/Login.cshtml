@{
    ViewData["Title"] = "Login";
}
@model Users
<div class="jumbotron">
    <div class="text-center">
        <h1>Login</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="GetUser" asp-controller="Home" method="POST">
            <div class="form-group">
                <span asp-validation-for="Email" class="label label-danger"></span><br>
                <label for="Email">Email:</label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Password" class="label label-danger"></span><br>
                <label for="Password">Password:</label>
                <input asp-for="Password" class="form-control">
            </div>
            <input type="submit" value="Login" class="btn btn-primary">
        </form>
    </div>
    <div class="col-md-3"></div>

</div>